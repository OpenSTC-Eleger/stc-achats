<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	    
	    <record id="purchase_order_ask_tree" model="ir.ui.view">
            <field name="name">purchase.order.ask.tree</field>
            <field name="model">purchase.order.ask</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
				<tree string="Demandes de Prix">
					<field name="name"/>
					<field name="state"/>
           		</tree>
           	</field>
        </record>
        
	    <record id="purchase_order_ask_tree" model="ir.ui.view">
            <field name="name">purchase.order.open.form</field>
            <field name="model">purchase.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
				<xpath expr="//notebook/page[@string='Purchase Order']/group[@col='11']/field[@name='state']" position="after">
				    <field name="validation"/>
				    <button name="verif_budget" string="Vérifier Budget" type="object" attrs="{'invisible':[('validation','&lt;&gt;','budget_to_check')]}"/>
				    
				</xpath>	
            </field>
        </record>
	    
	    purchase_order_form
        
	    <record id="purchase_order_ask_form" model="ir.ui.view">
            <field name="name">purchase.order.ask.form</field>
            <field name="model">purchase.order.ask</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
				<form string="Demandes de Prix">
                	<field name="name"/>
					<newline/>
					<field name="suppliers_id" nolabel="1" colspan="4" attrs="{'readonly':[('state','=','done')]}">
						<tree string="Fournisseurs potentiels" editable="top">
						    <field name="partner_id" attrs="{'readonly':[('state','&lt;&gt;', 'draft')]}"/>
						    <field name="partner_address_id" domain="[('partner_id','=',partner_id)]" attrs="{'readonly':[('state','&lt;&gt;', 'draft')]}"/>
						    <field name="selected" attrs="{'readonly':[('state','&lt;&gt;', 'waiting_selection')]}"/>
						    <field name="state"/>
						</tree>
					</field>
					<newline/>
					<field name="order_lines" nolabel="1" colspan="4" attrs="{'readonly':[('state','=','done')]}">
						<tree string="Produits de la Demande" editable="top">
						    <field name="product_id" attrs="{'readonly':[('state','&lt;&gt;', 'draft')]}"/>
						    <field name="qte" attrs="{'readonly':[('state','&lt;&gt;', 'draft')]}"/>
						    <field name="price_unit" attrs="{'readonly':[('state','&lt;&gt;', 'waiting_pu')],'required':[('state','=','waiting_pu')]}"/>
						    <field name="date_order" attrs="{'readonly':[('state','&lt;&gt;', 'draft')]}"/>
						    <field name="description"/>
						    <field name="state"/>
						</tree>
					</field>
					<newline/>
					<field name="state"/>
					<button name="validate_supplier" string="Valider Fourniseur" type="object" states="waiting_supplier" />
					<button name="send_ask" string="Envoyer demande (mails)" type="object" states="draft"/>
					<button name="to_draft_po" string="Convertir en bon de commande" type="object" states="done"/>
					<button name="cancel" string="Revenir au début" type="object" states="waiting_supplier"/>
            	</form>
            </field>
        </record>
        
	    
	</data>
</openerp>